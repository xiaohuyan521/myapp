<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/login_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_dots"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp10">

        <Button
            android:id="@+id/bt_next"
            android:layout_width="@dimen/dp130"
            android:layout_height="wrap_content"
            android:background="@drawable/mmain_main_cricle_btn"
            android:text="立即体验"
            android:textSize="@dimen/sp15"
            android:clickable="true"
            android:onClick="onNextClick"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp60">

        <LinearLayout
            android:id="@+id/in_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/iv_light_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mmain_main_vp_blue_dot" />
    </RelativeLayout>
</RelativeLayout>
