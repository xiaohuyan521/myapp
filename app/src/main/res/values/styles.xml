<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/activity_fade_in_out</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="activity_fade_in_out" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/global_in</item>
        <item name="android:activityOpenExitAnimation">@anim/global_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/global_in</item>
        <item name="android:activityCloseExitAnimation">@anim/global_out</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tv1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="tv2" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textColor">@color/theme_text_color</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <style name="tvTip" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
    <style name="tvBg" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@drawable/bg_text_edit</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="button1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp35</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:paddingLeft">@dimen/dp5</item>
        <item name="android:paddingRight">@dimen/dp8</item>
        <item name="android:paddingBottom">@dimen/dp4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:minWidth">@dimen/dp55</item>
    </style>

    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>
    <style name="transparent" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp16</item>
    </style>
</resources>