<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角
    <corners
        android:radius="2dp"/>-->
    <corners
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />
    <!-- 设置圆角半径 -->

    <!-- 渐变 -->
    <gradient
        android:centerColor="#38B7FD"
        android:endColor="#00A3FC"
        android:startColor="#00A3FC"
        android:type="linear"/>


    <!-- 间隔 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>
    <!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="50dp"
        android:height="50dp"/>
    <!-- 宽度和高度 -->

    <!-- 填充 -->
    <!--<solid-->
    <!--android:color="@android:color/white"/>-->
    <!-- 填充的颜色 -->

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="#FF72CAE1" />

</shape>
