<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF0000" />
            <padding
                android:left="4dp"
                android:right="5dp"
                android:top="4dp"
                android:bottom="4dp"/>
            <stroke
		        android:width="1dp"
		        android:color="#3f3f3f" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff6347" />
            <padding
                android:left="4dp"
                android:right="5dp"
                android:top="4dp"
                android:bottom="4dp"/>
            <stroke
		        android:width="1dp"
		        android:color="#3f3f3f" />
            <corners android:radius="8dp" />
        </shape>
    </item>
	<item>
        <shape android:shape="rectangle">
            <solid android:color="#ff6347" />
            <padding
                android:left="4dp"
                android:right="5dp"
                android:top="4dp"
                android:bottom="4dp"/>
            <stroke
		        android:width="0.5dp"
		        android:color="#3f3f3f" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>