<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层阴影：左偏移2dp，上偏移4dp -->
    <item
        android:left="@dimen/dp3"
        android:top="@dimen/dp4">
        <shape>
            <solid android:color="@color/gainsboro" />
            <!--圆角-->
            <corners android:radius="@dimen/dp10" />
        </shape>
    </item>
    <!-- 第二层前景：：底偏移4dp，右偏移2dp -->
    <item
        android:bottom="@dimen/dp4"
        android:right="@dimen/dp3">
        <shape>
            <solid android:color="@color/themeblue" />
            <!--圆角-->
            <corners android:radius="@dimen/dp5" />
        </shape>
    </item>
</layer-list>